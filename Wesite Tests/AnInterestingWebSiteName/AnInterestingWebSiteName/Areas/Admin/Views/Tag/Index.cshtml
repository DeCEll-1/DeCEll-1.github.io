@model IEnumerable<AnInterestingWebSiteName.Models.Tag>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
    AnInterestingWebSiteName.Models.AnInterestingWebSiteName_Model db = new AnInterestingWebSiteName.Models.AnInterestingWebSiteName_Model();
}
<div class="form">
    <div class="baslik">
        Etiket Listesi
        <a href="@Url.Action("Create","Tag")" style="margin-left:20px;">Etiket Ekle</a>

        <a href="@Url.Action("Index","Tag",new {a=1})" style="margin-left:20px;">Ekleme Zamanına Göre Sırala</a>

        <a href="@Url.Action("Index","Tag",new {a=0})" style="margin-left:20px;">Alfabeye Göre Sırala</a>

        @if (ViewBag.message != null)
        {
            @ViewBag.message;
        }
    </div>
    <div>
        <table cellpadding="0" cellspacing="0" class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>@Html.DisplayNameFor(model => model.Ad)</th>
                <th>Seçenekler</th>
            </tr>

            @foreach (AnInterestingWebSiteName.Models.Tag item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Ad</td>

                    <td style="text-align: center;">
                        <a href="@Url.Action("Edit","Tag",new {ID = item.ID})">Düzenle</a>
                        <br />
                        <a href="@Url.Action("Delete","Tag",new {ID = item.ID})">Sil</a>
                    </td>

                </tr>
            }

        </table>
    </div>

</div>
