@model AnInterestingWebSiteName.Models.Urunler
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<head>
    <script src="@Url.Content("~/ckeditor/ckeditor.js")" type="text/javascript"></script>
</head>


<div class="form">
    <div class="baslik">
        Urun Ekle

        <a href="@Url.Action("Index","Urun")" style="margin-left:20px;">Ürün Listesi</a>

        @if (ViewBag.message != null)
        {
            <label>@ViewBag.message</label>
        }
    </div>

    <div class="objectsItems">

        @using (Html.BeginForm("Create", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="objectsItem">
                Yayıncı Firma:
                <br />
                @Html.DropDownList("Yayinci_ID", null, htmlAttributes: new { @class = "dropDown" })
            </div>

            <div class="objectsItem">
                Yapımcı Firma:
                <br />
                @Html.DropDownList("Yapimci_ID", null, htmlAttributes: new { @class = "dropDown" })
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.Ad):
                <br />
                @Html.EditorFor(model => model.Ad)
                <br />
                @Html.ValidationMessageFor(model => model.Ad)
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.Aciklama):
                <br />
                @Html.EditorFor(model => model.Aciklama)
                <script>
                    CKEDITOR.replace('Aciklama', {
                        customConfig: '/Areas/Admin/Assets/CKEditorConfig/AdminCKEditor_config.js'
                    });
                </script>
                <br />
                @Html.ValidationMessageFor(model => model.Aciklama)
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.AciklamaAlt1):
                <br />
                @Html.EditorFor(model => model.AciklamaAlt1)
                <script>
                    CKEDITOR.replace('AciklamaAlt1', {
                        customConfig: '/Areas/Admin/Assets/CKEditorConfig/AdminCKEditor_config.js'
                    });
                </script>
                <br />
                @Html.ValidationMessageFor(model => model.AciklamaAlt1)
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.AciklamaAlt2):
                <br />
                @Html.EditorFor(model => model.AciklamaAlt2)
                <script>
                    CKEDITOR.replace('AciklamaAlt2', {
                        customConfig: '/Areas/Admin/Assets/CKEditorConfig/AdminCKEditor_config.js'
                    });
                </script>
                <br />
                @Html.ValidationMessageFor(model => model.AciklamaAlt2)
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.AciklamaAlt3):
                <br />
                @Html.EditorFor(model => model.AciklamaAlt3)
                <script>
                    CKEDITOR.replace('AciklamaAlt3', {
                        customConfig: '/Areas/Admin/Assets/CKEditorConfig/AdminCKEditor_config.js'
                    });
                </script>
                <br />
                @Html.ValidationMessageFor(model => model.AciklamaAlt3)
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.Fiyat)
                <br />
                @Html.EditorFor(model => model.Fiyat)
                <br />
                @Html.ValidationMessageFor(model => model.Fiyat)
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.Indirim)
                <br />
                @Html.EditorFor(model => model.Indirim)
                <br />
                @Html.ValidationMessageFor(model => model.Indirim)
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.IkonYolu) <small>231px X 87px</small>
                <br />
                <input type="file" name="icon" value="Dosya Yükle" class="dosyaYukle" />
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.TamResimYolu) <small>300px X 140px</small>
                <br />
                <input type="file" name="fullImage" value="Dosya Yükle" class="dosyaYukle" />
            </div>

            <div class="objectsItem">
                @Html.LabelFor(model => model.ArkaPlanResmi)
                <br />
                <input type="file" name="arkaPlanResmi" value="Dosya Yükle" class="dosyaYukle" />
            </div>

            <div class="objectsItem">
                <input type="submit" value="Ürün Ekle" />
            </div>
        }

    </div>

</div>